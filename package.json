{
  "name": "play-ts-cucumber",
  "version": "1.0.0",
  "description": "Playwright Cucumber TS framework - The easiest way to learn",
  "main": "index.js",
  "scripts": {
    "debug": "cross-env ENV=prod PWDEBUG=1 DEBUG=pw:api cucumber-js --config=cucumber.js",
    "pretest": "npx ts-node src/helper/report/init.ts",
    "test": "cross-env FORCE_COLOR=0 cucumber-js --config=cucumber.js || true",
    "test:headless": "cross-env HEADED=false ENV=prod FORCE_COLOR=0 cucumber-js --config=cucumber.js || true",
    "test:qa": "cross-env ENV=qa FORCE_COLOR=0 cucumber-js --config=cucumber.js || true",
    "test:staging": "cross-env ENV=staging FORCE_COLOR=0 cucumber-js --config=cucumber.js || true",
    "test:ci": "cross-env headless=true ENV=ci FORCE_COLOR=0 cucumber-js --config=cucumber.js || true",
    "test:prod": "cross-env FORCE_COLOR=0 cucumber-js --config=cucumber.js || true",
    "test:smoke": "cross-env ENV=prod FORCE_COLOR=0 cucumber-js --config=cucumber.js --tags '@accessibility' || true",
    "posttest": "npx ts-node src/helper/report/report.ts",
    "test:failed": "cucumber-js -p rerun @rerun.txt"
  },
  "keywords": [
    "cucumber",
    "cucumber - TS",
    "playwright-cucumber"
  ],
  "author": "Koushik @LetCode with Koushik",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@playwright/test": "^1.35.0",
    "@types/node": "^25.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "fs-extra": "^11.1.1",
    "multiple-cucumber-html-reporter": "^3.3.0",
    "ts-node": "^10.9.2",
    "winston": "^3.8.2"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.11.0",
    "axe-html-reporter": "^2.2.11"
  },
  "engines": {
    "node": ">=16.00",
    "npm": ">=8.00"
  }
}
